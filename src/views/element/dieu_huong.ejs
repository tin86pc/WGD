<!DOCTYPE html>
<html lang="vi">

<%- include('head') %>

    <body>

        <div class="container mt-3">
            <div class="row">
                <nav class="navbar navbar-expand-sm navbar-light bg-light">

                    <div class="container-fluid">
                        <a class="navbar-brand" style="color:rgb(254, 1, 1);font-weight: bold;" href="/">WGĐ</a>

                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#mynavbar">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="mynavbar">
                            <ul class="navbar-nav me-auto">

                                <li class="nav-item">
                                    <a class="nav-link" href="/">Trang chủ</a>
                                </li>

                                <% if (typeof data!='object' ) { %>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/gioi_thieu">Giới thiệu</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" href="/dang_nhap">Đăng nhập</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" href="/dang_ky">Đăng ký</a>
                                    </li>
                                    <% } %>


                                        <% if (typeof data=='object' ) { %>

                                            <% if ( data.nhiemVu=='adm' ) { %>
                                                <li class="nav-item">
                                                    <a class="nav-link" href="/adm">adm</a>
                                                </li>

                                                <% } %>


                                                    <% if ( data.nhiemVu=='ql' ) { %>

                                                        <li class="nav-item">
                                                            <a class="nav-link" href="/ql">Quản lý</a>
                                                        </li>
                                                        <% } %>

                                                            <li class="nav-item">
                                                                <a class="nav-link" href="/dang_xuat">Đăng xuất</a>
                                                            </li>

                                                            <% } %>


                            </ul>





                        </div>
                    </div>

                </nav>

            </div>


            <script>

                // xử lý phần navbar
                var pathname = window.location.pathname;

                var a = document.getElementsByClassName('nav-link')
                for (var i = 0; i < a.length; i++) {
                    a[i].className.replace(" active", "");
                    if (pathname === a[i].pathname) {
                        a[i].className += ' active text-light bg-dark'
                    }
                }


























            </script>



        </div>