<%- include('element/header') %>

    <div class="container">
        <div class="row">
            <div class="col-12  bg-light">




                <h1>Dự án/h1>

                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Nhập nội dung cần tìm">
                        <button class="btn btn-success" type="submit">Tìm</button>
                    </div>

                    <p>Danh sách người dùng</p>

                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Liên lạc</th>
                                <th>Quyền</th>
                                <th>Sửa</th>
                            </tr>
                        </thead>

                        <% for(var i=0; i<usersList.length; i++) {%>

                            <tbody>

                                <form method="post" action="/cap_nhat/<%=usersList[i].id%>">
                                    <tr>
                                        <td>
                                            <input type="text" class="form-control email<%=i%>" id="lienhe"
                                                name="lienhe" readonly value=<%=usersList[i].lienHe %>>
                                        </td>

                                        <td>
                                            <select class="form-select" name="nhiemvu" chon="<%=usersList[i].nhiemVu%>">

                                                <option value="0">Người dùng </option>
                                                <option value="1">Đối tác</option>
                                                <option value="2">Admin</option>
                                            </select>
                                        </td>

                                        <td>

                                            <a>
                                                <button type="submit" class="btn btn-success">Lưu</button>
                                            </a>

                                            <a href="/xoa/<%=usersList[i].id%>">
                                                <button type="button" class="btn btn-danger">Xóa</button>
                                            </a>

                                        </td>

                                    </tr>

                                </form>


                            </tbody>

                            <% } %>


                    </table>


            </div>
        </div>
    </div>

    <script>

        // sử lý phần chọn
        const s = document.getElementsByName('nhiemvu')
        s.forEach(e => {
            const v = e.getAttribute('chon')
            e.selectedIndex = v;
        });



    </script>

















